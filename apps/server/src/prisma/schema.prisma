// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider        = "prisma-client-js"
  previewFeatures = ["mongoDb"]
}

datasource db {
  provider = "mongodb"
  url      = env("MONGO_CONNECTION_URL")
}

model Post {
  id                String            @id @default(auto()) @map("_id") @db.ObjectId
  type              PostType
  title             String
  description       String
  imageUrl          String
  availableBeds     Int
  totalBeds         Int
  baths             Int
  amenities         String[]
  ppp               Int
  fbLink            String
  genderRestriction GenderRestriction
  author            String
  confirmed         Boolean
  text              String
  groupId           String            @db.ObjectId
  flagged           Boolean
  isAvailable       Boolean
  images            String[]
  building          BuildingEnum
}

enum PostType {
  entireRentalUnit
  sharedRentalUnit
}

enum GenderRestriction {
  coed
  male
  female
}

enum BuildingEnum {
  icon
  rezOne
  other
}
